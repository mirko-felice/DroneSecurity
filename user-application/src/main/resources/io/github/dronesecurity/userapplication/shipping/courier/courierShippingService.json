{
  "openapi": "3.0.3",
  "info": {
    "title": "Service that exposes Courier Shipping operations.",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://{host}:{port}/{basePath}",
      "description": "Localhost server",
      "variables": {
        "host": {
          "default": "localhost"
        },
        "port": {
          "default": "15000"
        },
        "basePath": {
          "default": "courierShippingService"
        }
      }
    }
  ],
  "paths": {
    "/performDelivery": {
      "post": {
        "operationId": "performDelivery",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Order"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Performing delivery.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/rescheduleDelivery": {
      "post": {
        "operationId": "rescheduleDelivery",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "order": {
                    "$ref": "#/components/schemas/Order"
                  },
                  "newEstimatedArrival": {
                    "$ref": "#/components/schemas/OrderDate"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order rescheduled.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/OrderDate"
                }
              }
            }
          }
        }
      }
    },
    "/listOrders": {
      "get": {
        "operationId": "listOrders",
        "responses": {
          "200": {
            "description": "Successfully got Orders.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  },
                  "uniqueItems": true
                }
              }
            }
          }
        }
      }
    },
    "/saveDelivery" : {
      "post": {
        "operationId": "saveDelivery",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "orderId": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully save the delivery status"
          }
        }
      }
    },
    "/callBack": {
      "post": {
        "operationId": "callBack",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "orderId": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully called back drone."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderDate": {
        "type": "string",
        "pattern": "^([a-z]{0,12}) (([0-2]\\d|[3][0-1]) [2][0]\\d{2}\\s([0-1]\\d|[2][0-3])\\:[0-5]\\d\\:[0-5]\\d)$"
      },
      "Order": {
        "type": "object",
        "properties": {
          "product": {
            "type": "string"
          },
          "placingDate": {
            "$ref": "#/components/schemas/OrderDate"
          },
          "estimatedArrival": {
            "$ref": "#/components/schemas/OrderDate"
          }
        }
      }
    }
  }
}